<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- POSTIZ Iframe Action -->
    <record id="action_postiz_iframe" model="ir.actions.client">
        <field name="name">POSTIZ</field>
        <field name="tag">postiz_iframe</field>
        <field name="target">main</field>
    </record>

    <!-- Alternative: Using a simple iframe view -->
    <record id="view_postiz_iframe" model="ir.ui.view">
        <field name="name">postiz.iframe.view</field>
        <field name="model">ir.ui.view</field>
        <field name="arch" type="xml">
            <form string="POSTIZ">
                <iframe src="http://localhost:3000" 
                        style="width: 100%; height: 100vh; border: none;"
                        id="postiz_iframe"/>
            </form>
        </field>
    </record>

    <!-- Template for full screen iframe -->
    <template id="postiz_iframe_template" name="POSTIZ Iframe">
        <t t-call="web.layout">
            <t t-set="head">
                <style>
                    .o_action_manager {
                        height: 100vh !important;
                    }
                    #postiz_iframe_container {
                        height: calc(100vh - 46px);
                        width: 100%;
                        position: relative;
                    }
                    #postiz_iframe_container iframe {
                        width: 100%;
                        height: 100%;
                        border: none;
                    }
                </style>
            </t>
            <div id="postiz_iframe_container">
                <iframe src="http://localhost:3000" 
                        id="postiz_iframe"
                        sandbox="allow-same-origin allow-scripts allow-popups allow-forms allow-modals"/>
            </div>
        </t>
    </template>
</odoo>